[env]
TERM = "xterm-256color"

[font]
{{ if eq .chezmoi.os "darwin" }}
size = 14.0
{{ else if eq .chezmoi.os "linux" }}
size = 12.0
{{ end }}

[font.normal]
family = "FiraCode Nerd Font"
style = "Regular"

[window]
decorations = "none"
opacity = 0.95
#blur = true
startup_mode = "Maximized"

[window.padding]
x = 10
y = 5

