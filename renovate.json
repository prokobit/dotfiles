{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml\\.tmpl$/"
    ]
  }
}
