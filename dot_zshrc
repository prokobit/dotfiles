# If you come from bash you might have to change your $PATH.
export EDITOR="nvim"
export GOPATH=$HOME/go
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
export PATH=$HOME/.tmux/plugins/tmuxifier/bin:$NVM_DIR:$GOPATH/bin:$HOME/bin:$HOME/.local/bin:/usr/local/opt/curl/bin:/usr/local/bin:/usr/local/go/bin:$PATH
export ZSH=$HOME/.config/zsh
export JDTLS_JVM_ARGS="-javaagent:$HOME/.local/share/nvim/mason/packages/jdtls/lombok.jar"
ZSH_TMUX_AUTOSTART=true
ZSH_TMUX_AUTOQUIT=false

# Created by Zap installer
[ -f "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh" ] && source "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh"
plug "zsh-users/zsh-autosuggestions"
plug "zap-zsh/supercharge"
plug "zap-zsh/zap-prompt"
plug "zsh-users/zsh-syntax-highlighting"
plug "zsh-users/zsh-history-substring-search"
plug "zap-zsh/fzf"
plug "chrishrb/zsh-kubectl"
plug "agkozak/zsh-z"
plug "$ZSH/plugins/git/git.plugin.zsh"
plug "$ZSH/plugins/tmux/tmux.plugin.zsh"

# Load and initialise completion system
autoload -Uz compinit && compinit

zstyle ':completion:*' menu select
# complete -o nospace -C $HOME/bin/terraform terraform

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

# Aliases
alias ws="cd ~/workspace"
alias vim="nvim"
alias cat="bat"
alias ls="eza"
alias ll="ls -al"
alias lg="lazygit"
alias ti="tmuxifire"

# Load Starship
eval "$(tmuxifier init -)"
eval "$(starship init zsh)"
